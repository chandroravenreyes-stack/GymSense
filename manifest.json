    },
    {
      "src": "assets/images/screenshot-workouts.jpg",
      "sizes": "390x844", 
      "type": "image/jpeg",
      "form_factor": "narrow",
      "label": "Personalized workout recommendations"
    }
  ],
  "icons": [
