{
  "name": "GymSense - Your AR Gym Companion",
  "short_name": "GymSense",
  "description": "AI-powered gym companion with AR equipment detection and personalized workout recommendations for beginners",
  "version": "1.0.0",
  "start_url": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#556B2F",
  "background_color": "#F5F5DC",
  "lang": "en",
  "scope": "/",
  "categories": ["fitness", "health", "lifestyle", "sports"],
  "screenshots": [
    {
      "src": "assets/images/screenshot-home.jpg",
      "sizes": "390x844",
      "type": "image/jpeg",
