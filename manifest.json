      "sizes": "72x72",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    },
    {
      "src": "assets/images/bodybuilder-barbell-logo.svg", 
      "sizes": "96x96",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    },
    {
      "src": "assets/images/bodybuilder-barbell-logo.svg",
      "sizes": "128x128", 
      "type": "image/svg+xml",
      "purpose": "maskable any"
    },
    {
      "src": "assets/images/bodybuilder-barbell-logo.svg",
      "sizes": "144x144",
      "type": "image/svg+xml", 
      "purpose": "maskable any"
    },
    {
      "src": "assets/images/bodybuilder-barbell-logo.svg",
      "sizes": "152x152",
      "type": "image/svg+xml",
      "purpose": "maskable any"
    },
    {
      "src": "assets/images/bodybuilder-barbell-logo.svg",
      "sizes": "192x192", 
      "type": "image/svg+xml",
