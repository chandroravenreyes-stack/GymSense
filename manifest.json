      "src": "assets/images/bodybuilder-barbell-logo.svg",
      "sizes": "512x512",
      "type": "image/svg+xml", 
      "purpose": "maskable any"
    }
  ],
  "shortcuts": [
    {
      "name": "Quick Scan",
      "short_name": "Scan",
      "description": "Quickly scan gym equipment with AR",
      "url": "/?screen=scanner",
      "icons": [
        {
          "src": "assets/icons/shortcut-scan.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Daily Workout", 
      "short_name": "Workout",
      "description": "Get your personalized daily workout",
      "url": "/?screen=workouts",
      "icons": [
        {
          "src": "assets/icons/shortcut-workout.png", 
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Progress",
      "short_name": "Progress", 
      "description": "View your fitness progress and achievements",
      "url": "/?screen=progress",
      "icons": [
        {
          "src": "assets/icons/shortcut-progress.png",
          "sizes": "96x96", 
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate",
  "protocol_handlers": [
    {
      "protocol": "web+gymsense",
      "url": "/?action=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "workout_photo",
          "accept": ["image/*"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/open-workout",
      "accept": {
        "application/json": [".json"],
        "text/plain": [".txt"]
      }
    }
  ],
  "permissions": [
    "camera",
    "notifications",
    "persistent-storage"
  ],
  "features": [
    "CrossOriginIsolated"
  ]
}
